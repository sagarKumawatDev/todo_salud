<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21sp"
        android:layout_marginEnd="24dp"
        android:text="ADVERTENCIA"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:customFontThickness="bold" />

    <TextView
        android:id="@+id/content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="top"
        android:lineSpacingExtra="8dp"
        android:text="Si continua sin registrarse, su información no tendrá copia de seguridad y se perderá con un cambio de teléfono o actualización."
        android:textColor="#8a000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="16dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="REGISTRARME"
        android:textColor="#8c8c8c"
        android:textSize="14sp"
        app:customFontThickness="bold" />

    <TextView
        android:id="@+id/text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="CONTINUAR"
        app:customFontThickness="bold"
        android:textColor="#1fabf4"
        android:textSize="14sp" />


</RelativeLayout>